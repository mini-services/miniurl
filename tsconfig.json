{
	"compilerOptions": {
		"target": "ESNext",
		"declaration": true,
		"module": "ESNext",
		"sourceMap": true,
		"strict": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "bin",
		"experimentalDecorators": true,
		"pretty": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true
	}
}
